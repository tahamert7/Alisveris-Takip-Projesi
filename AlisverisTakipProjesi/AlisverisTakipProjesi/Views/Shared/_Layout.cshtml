<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
            </div>
            <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated)
                {
                    <li><a href="/Kullanicilar/Guncelle" style="color:white">@Session["ad"] @Session["soyad"]</a></li>

                    if (User.IsInRole("U"))
                    {
                        <li><a href="/Urun/Index">Urunler</a></li>
                        <li><a href="/Sepet/Index">Sepet</a></li>
                    }


                    <li><a href="/Kategori/Index">Kategoriler</a></li>
                    <li>
                        <a href="/Urun/Index">Ürünler</a>
                    </li>
                    if (User.IsInRole("A"))
                    {
                        <li><a href="/Kullanici/Index">Kullanıcılar</a></li>
                    }
                    <li class="navbar-right"><a href="/Account/Login">Çıkış Yap</a></li>
                }
                else
                {
                    <li><a href="/Account/Login">Giriş Yap</a></li>
                    <li><a href="/Account/Register">Kayıt Ol</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
